<h1>Ember Flipper</h1>
<label>
  <input
    type="checkbox"
    value={{vertical}}
    onchange={{action toggleProperty "vertical"}}
  >
  Flip Vertical
</label>

<h2>Click</h2>
<EmberFlipper
  @flipOn="click"
  @vertical={{vertical}}
as |flipper|>
  <flipper.Front>
    <div class="front-container">
      Front
    </div>
  </flipper.Front>
  <flipper.Back>
    <div class="back-container">
      Back
    </div>
  </flipper.Back>
</EmberFlipper>

<h2>Hover</h2>
<EmberFlipper
  @flipOn="hover"
  @vertical={{vertical}}
as |flipper|>
  <flipper.Front>
    <div class="front-container">
      Front
    </div>
  </flipper.Front>
  <flipper.Back>
    <div class="back-container">
      Back
    </div>
  </flipper.Back>
</EmberFlipper>

<h2>None</h2>
<label>
  {{!-- 
    This would have to be changed
    {{on "click" (fn toggleProperty "flipped")}}
    with toggleProperty bound by @action in the controller
  --}}
  <button type="button" {{action toggleProperty "flipped"}}>
    Flip container
  </button>
</label>
<EmberFlipper
  @flipped={{flipped}}
  @vertical={{vertical}}
as |flipper|>
  <flipper.Front>
    <div class="front-container">
      Front
    </div>
  </flipper.Front>
  <flipper.Back>
    <div class="back-container">
      Back
    </div>
  </flipper.Back>
</EmberFlipper>

